{% extends 'base.html.twig' %}

{% block title %}Bartforce Member{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-headline"><i class="fa fa-address-card mr-1"></i> Profil</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 text-center">
            <img class="user-img-profile rounded" src="{{ profileUser.avatar }}"><br>
            {{ profileUser.username }} <br>
            {{ member.nick }} <br>


            {% for role in profileUserRoles %}
                <span class="badge" style="background-color: {{ role.color }}; color: #ffffff;">{{ role.name }}</span>
            {% endfor %}
        </div>
        <div class="col-md-4">
            <h4 class="mt-3">Forum</h4>
            <ul class="list-group">
                <li class="list-group-item">Themen <span class="float-right">{{ profileUser.forumTopics.values|length }}</span></li>
                <li class="list-group-item">Beitr√§ge <span class="float-right">{{ profileUser.forumPosts.values|length }}</span></li>
                <li class="list-group-item">Antworten <span class="float-right">{{ profileUser.forumReplies.values|length }}</span></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h4 class="mt-3">Turniere</h4>
       </div>
    </div>
{% endblock %}