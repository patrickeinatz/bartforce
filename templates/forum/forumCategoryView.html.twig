{% extends 'base.html.twig' %}

{% block title %}Bartforce {{ title }}{% endblock %}

{% block content %}
    <div class="row mb-4">
        <div class="col-md-12">
            <a href="/forum" class="btn btn-sm btn-gold"><i class="fas fa-comments mr-1"></i> Kategorien</a>
            <button type="button" class="btn btn-sm btn-gold float-right" data-toggle="modal" data-target=".bd-example-modal-lg">
                <i class="fas fa-plus-circle"></i> Neues Thema
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-headline"><i class="fas fa-tag"></i> {{ category.title }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for topic in topics|sort((a, b) => b.createdAt <=> a.createdAt) %}
                <a href="/forum/topic/{{ topic.id }}" class="forumTopicList-Item">
                    <i class="fas fa-stream mr-2 mb-2"></i> {{ topic.title }}<br>
                    <small class="pl-2">
                        <span><i class="fas fa-clone"></i> 20</span>
                        <span><i class="fas fa-users"></i> 4</span>
                        <span><i class="fas fa-history"></i> vor 4 Minuten</span>
                        <span><i class="far fa-calendar"></i> {{ topic.createdAt|date("d.m.Y H:i")  }}</span>
                    </small>
                </a>
            {% endfor %}
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-darker">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="exampleModalLongTitle">Neue Thema er√∂ffnen</h5>
                    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body border-0">
                    {{ form_start(forumTopicForm) }}
                    {{ form_row(forumTopicForm.title) }}
                    {{ form_row(forumTopicForm.topicContent) }}
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><small>Abbrechen</small></button>
                    <button type="submit" class="btn btn-sm btn-gold"><small>Absenden</small></button>
                    {{ form_end(forumTopicForm) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}